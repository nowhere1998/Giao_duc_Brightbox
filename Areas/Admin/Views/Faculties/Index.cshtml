@model IEnumerable<MyShop.Models.Faculty>

@{
    ViewData["Title"] = "Danh sách giảng viên";
}

<body class="bg-light">

    <main class="py-4">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="text-primary">Danh sách giảng viên</h3>

            <a asp-action="create" asp-controller="Faculties" class="btn btn-primary">
                <i class="fa fa-plus"></i> Thêm mới
            </a>

        </div>

        <form method="get"
              asp-area="Admin"
              asp-controller="Faculties"
              asp-action="Index"
              class="mb-3">
            <div class="input-group">
                <div class="input-group-prepend">
                    <!-- nút submit là icon search -->
                    <button type="submit" class="btn btn-primary" title="Tìm kiếm">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
                <input type="text"
                       name="name"
                       value="@ViewBag.searchName"
                       class="form-control"
                       placeholder="Tìm theo tên..." />
            </div>
        </form>
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger text-center">
                @TempData["Error"]
            </div>
        }
        <table class="table table-hover align-middle" style="border-collapse:collapse;">
            <thead class="table-primary">
                <tr style="border-bottom:2px solid #cfd4da;">
                    <th>Tên</th>
                    <th>Ảnh</th>
                    <th>Mô tả</th>
                    <th>Trạng thái</th>
                    <th class="text-center">Hành động</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="border-bottom:1px solid #dee2e6;">
                        <td>@item?.Name</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item?.Image))
                            {
                                <img src="@item?.Image" style="border-radius:6px; max-width:200px; max-height: 50px" />
                            }
                        </td>
                    <td>
                        @(string.IsNullOrEmpty(item?.Description)
                                                ? ""
                                                : item?.Description.Length > 10
                                                ? item?.Description.Substring(0, 10) + "..."
                                                : item?.Description)

                        @if (!string.IsNullOrEmpty(item?.Description) && item?.Description.Length > 50)
                            {
                                <a href="javascript:void(0)"
                                   class="ms-2 text-primary text-decoration-none"
                                   data-bs-toggle="modal"
                                   data-bs-target="#messageModal"
                                   data-name="@item?.Name"
                                   data-message="@item?.Description">
                                    Xem
                                </a>

                            }
                        </td>
                        <td>
                            @if (item?.Active == 1)
                            {
                                <span class="badge bg-success">Hiển thị</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Ẩn</span>
                            }
                        </td>

                        <td class="text-center">
                            <a class="btn btn-sm btn-outline-primary me-1"
                               href="@Url.Action("Edit", new { id = item.FacultyID })">
                                <i class="fa fa-edit"></i>
                            </a>

                            <a class="btn btn-sm btn-outline-danger me-1" onclick="return confirm('Bạn có chắc chắn muốn xóa không?')"
                               href="@Url.Action("Delete", new { id = item.FacultyID })">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">

                @if (ViewBag.Page > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { name = ViewBag.searchName, page = ViewBag.Page - 1 })">«</a>
                    </li>
                }

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { name = ViewBag.searchName, page = i })">@i</a>
                    </li>
                }

                @if (ViewBag.Page < ViewBag.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { name = ViewBag.searchName, page = ViewBag.Page + 1 })">»</a>
                    </li>
                }

            </ul>
        </nav>
    </main>

    <div class="modal fade" id="messageModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Chi tiết tin nhắn</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <p><strong>Họ tên:</strong> <span id="modalName"></span></p>
                    <p><strong>Email:</strong> <span id="modalEmail"></span></p>
                    <hr />
                    <p><strong>Nội dung:</strong></p>
                    <div class="border rounded p-3 bg-light"
                         style="white-space: pre-wrap; text-align: left;">
                        <span id="modalMessage"></span>
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        var messageModal = document.getElementById('messageModal');
        messageModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;

            document.getElementById('modalName').innerText = button.getAttribute('data-name');
            document.getElementById('modalEmail').innerText = button.getAttribute('data-email');
            document.getElementById('modalMessage').innerText = button.getAttribute('data-message');
        });
    </script>
</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>